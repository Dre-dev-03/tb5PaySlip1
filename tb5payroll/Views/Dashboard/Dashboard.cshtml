                                <td>SSS</td>
                                <td><span id="payslipSSS">0.00</span></td>
                            </tr>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td>PAG-IBIG</td>
                                <td><span id="payslipPagIbig">0.00</span></td>
                            </tr>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td>Tardiness</td>
                                <td><span id="payslipTardiness">0.00</span></td>
                            </tr>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td>Loan</td>
                                <td><span id="payslipLoan">0.00</span></td>
                            </tr>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td>Others/CA</td>
