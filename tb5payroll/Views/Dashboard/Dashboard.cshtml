                <button type="button" class="btn btn-primary">Print</button>
            </div>
        </div>
    </div>
</div>

<!-- JavaScript -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll(".btn-view").forEach(button => {
            button.addEventListener("click", function () {
                let row = this.closest("tr");
                let employeeName = row.querySelector("td:nth-child(2) a").innerText;
                let overtime = row.querySelector("td:nth-child(5)").innerText;
                let hoursWorked = row.querySelector("td:nth-child(6)").innerText;

                // Set Payslip Data
                document.getElementById("payslipEmployeeName").innerText = employeeName;
                document.getElementById("payslipOvertime").innerText = overtime;
                document.getElementById("payslipGrossPay").innerText = hoursWorked * 50; // Example Calculation

                // Show Modal
                let payslipModal = new bootstrap.Modal(document.getElementById("payslipModal"));
                payslipModal.show();
            });
        });
    });
</script>
