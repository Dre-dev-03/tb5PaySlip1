@{
    Layout = "_LoginLayout";
}

<div class="container-fluid " style="height:100vh;">
    <div class="row " style="height:100vh;">
        <div class="col-7 col-12-sm text-center left-col">
            <div class="logo-container  mt-3">
                <img src="~/assets/Untitled_design__3_-removebg-preview.png" alt="Alternate Text" style="height:320px;" />
            </div>
            <h1 class="">THE BIG FIVE</h1>
            <h5 class="mb-5">Training and Assessment Center Inc.</h5>
            <div class="down-logo-container mt-5 ">
                <img src="~/assets/th__1_-removebg-preview.png" alt="Alternate Text" style="height:120px" class="mt-3" />
                <span class="">Technical Education And Skills Development Authority</span>

            </div>

        </div>
        <div class="col-12 col-sm-5 text-center mx-auto right-col">
            <!-- Top Container with Logo and Heading -->
            <div class="top-container mb-2 mt-5">
                <img alt="Alternate Text" src="~/assets/payroll.png" style="height:250px" />
                <h5 class="text-white">Payroll System</h5>
            </div>

            <!-- Main Container with Inputs and Buttons -->
            <div class="container login-container mt-5 p-2">
                <!-- Centered Input Fields -->
                <div class="d-flex justify-content-center">

                    <div class="w-75">
                        <!-- Email Input -->
                        <div class="input-icon mb-2">
                            <i class="fas fa-user"></i>
                            <input class="form-control text-center text-dark rounded-3" type="email" name="email" placeholder="Username" />
                        </div>

                        <!-- Password Input -->
                        <div class="input-icon mt-4">
                            <i class="fas fa-lock"></i>
                            <input class="form-control text-center text-dark rounded-3" type="password" name="password" placeholder="Password" />
                        </div>
                    </div>

                </div>



                <!-- Centered Login Button -->
                <div class="d-flex justify-content-center mt-5">
                    <button class="btn btn-light login-btn btn-sm" type="button"><h5 class="text-dark">Login</h5></button>

                </div>

                

    </div>
</div>
</div>
</div>